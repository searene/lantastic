{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015", "es2017", "dom"],
    "moduleResolution": "node",
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "lib",
    "jsx": "react",
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*"
  ]
}
